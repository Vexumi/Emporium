<Window x:Class="Emporium.Views.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Emporium.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="315,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" Height="26" FontSize="16" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox HorizontalAlignment="Left" Margin="315,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" Height="26" FontSize="16" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Sign in" HorizontalAlignment="Left" Margin="344,218,0,0" VerticalAlignment="Top" Height="31" Width="140" Command="{Binding SignInButtonCommand}" />
        <Label Content="Email:" HorizontalAlignment="Left" Margin="269,146,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.318,0.136" />
        <Label Content="Password:" HorizontalAlignment="Left" Margin="248,177,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>
